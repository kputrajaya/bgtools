{
  "redirects": [
    {
      "source": "/",
      "destination": "/shelf/",
      "permanent": false
    },
    {
      "source": "/:path(dials|score|shelf)",
      "destination": "/:path*/",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/bgg/(.*)",
      "destination": "/api/bgg?path=$1"
    }
  ]
}
